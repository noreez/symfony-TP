{% extends 'admin-template.html.twig' %}

{% block body %}
<br/>
    <!-- List -->
    <div style="width: 55%; margin: auto;">
        <div class="card-body">
            <div class="list-group">
                {% for category in category %}
                     <button type="button" class="list-group-item list-group-item-action">Category: {{ category.title }}
                        <br>
                        <i>{{ category.description }}</i>
                        <br>
                        <a href="{{ path('update-category', {'id': category.id}) }}">Update
                        </a>
                        <a href="{{ path('remove-category', {'id': category.id}) }}">Delete
                        </a>
                    </button>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
